<% if(articles && articles.length > 0){ articles.forEach(function(article, index){ %>
<div class="post">
	<h3 class="title"><a href="/article/<%= article._id %>"><%- article.title %></a></h3>
	<% include article-info-block %>
	<div class="summry">
		<%- article.summry %>
		<div class="more">
		    <a href="/article/<%= article._id %>" title="查看详细">[查看详细...]</a>
        </div>
	</div>
</div>
<% })}else{ %>
<div class="no-result">
    <p>抱歉，还没有文章。</p>
</div>
<% } %>