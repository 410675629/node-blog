extends layout

block content
  section.ad-index
    .toolbar 服务器及站点信息:
    .row
      span.span-col 名称：
      span #{osInfo.hostname}
    .row
      span.span-col 操作系统：
      span #{osInfo.type}, 版本:#{osInfo.release}
    .row
      span.span-col 运行端口：
      span #{siteInfo.port}
    .row
      span.span-col 站点根目录：
      span #{siteInfo.root}
    .row
      span.span-col 静态文件目录：
      span #{siteInfo.staticDir}
    .row
      span.span-col 模板引擎：
      span #{siteInfo.viewEngine}
    .row
      span.span-col 模板文件目录：
      span #{siteInfo.viewDir}