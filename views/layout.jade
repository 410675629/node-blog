doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .wrap
      .content
        header
          .logo-box
            h1
              a(href='/') #{siteData.master}
              em.desc= siteData.description
          nav
            ul
              li
                a(href='/') 首页
              li
                a(href='/article') 文章列表
              li
                a(href='/about') 关于About
        block content
      footer
        .footer-c
          p &copy; 2012 Powered by
            a(href='#{siteData.powerUrl}') #{siteData.power}
            if isLogin
              a(href='/admin') Admin->Enter
            else
              a#login(href='#loginBox') Admin
    include fancyBox
    script(type='text/javascript',src='/js/sea.js',data-main='init')
